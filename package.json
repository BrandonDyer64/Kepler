{
  "name": "kepler-root",
  "version": "1.0.0",
  "description": "Root of the kepler repository",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "husky": "^2.2.0",
    "mocha": "^6.1.4",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "submodules": "^3.0.0"
  },
  "scripts": {
    "build": "cd Entities && npm run build && cd ../Display && npm run build && cd ../Core && npm run build",
    "postinstall": "install-submodules -v && symlink-submodules -v",
    "postuninstall": "prune-symlinked-submodules -v",
    "prune": "npm prune && prune-submodules -v && prune-symlinked-submodules -v",
    "outdated": "npm outdated && outdated-submodules -v",
    "clean": "clean-submodules -v && rm -rf node_modules",
    "test": "mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MagentexSoftware/Kepler.git"
  },
  "keywords": [
    "kepler",
    "engine",
    "kepler-engine",
    "game",
    "game-engine"
  ],
  "author": "Brandon Dyer",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/MagentexSoftware/Kepler/issues"
  },
  "homepage": "https://github.com/MagentexSoftware/Kepler#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm test"
    }
  }
}
